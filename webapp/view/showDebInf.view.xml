									<Button width="100%" text="{i18n>addRow}" id="addRow" icon="sap-icon://add-contact"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
					<Button text="Ansprechpartner speichern" type="Accept" iconFirst="true" width="293px" enabled="true" visible="true" iconDensityAware="false"/>
				</content>
