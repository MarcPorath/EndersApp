{
	"_version": "1.7.0",
	"sap.app": {
		"id": "EndersApp",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"sourceTemplate": {
			"id": "ui5template.basicSAPUI5ApplicationProject",
			"version": "1.40.12"
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_belize"

		]
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "EndersApp.view.splitapp",
			"type": "XML"
		},
		"dependencies": {
			"minUI5Version": "1.30.0",
			"libs": {
				"sap.ui.core": {},
				"sap.m": {},
				"sap.ui.layout": {},
				"sap.ushell": {},
				"sap.collaboration": {},
				"sap.ui.comp": {},
				"sap.uxap": {}
			}
		},
		"routing" : {
			"config" : {
				"routerClass": "sap.m.routing.Router",
				"viewType":"XML",
				"viewPath":"EndersApp.view",
				"async": true,
				"controlId": "mainView"
				},
								"routes": [
                    
                    {
                                  "pattern": "Master",
                                  "name": "Master",
                                  "target": ["mainDetail","Master"]
                    },
                    
                    {
                                  "pattern": "Master/mainDetail",
                                  "name": "mainDetail",
                                  "greedy": false,
                                  "target": ["Master","mainDetail"]
                    },
                    
                    {
                                  "pattern": "Master/detCreateOrder",
                                  "name": "detCreateOrder",
                                  "greedy": false,
                                  "target": ["Master","detCreateOrder"]
                    },
                    
                    {
                                  "pattern": "",
                                  "name": "default",
                                  "greedy": false,
                                  "target": ["mainDetail","Master"]
                    }, 
                                        {
                                  "pattern": "Master/showOrderSelect/Detail",
                                  "name": "showOrderDetail",
                                  "greedy": false,
                                  "target": ["showOrderSelect","showOrderDetail"]
                    },
                                     {
                                  "pattern": "Master/showOrderSelect",
                                  "name": "showOrderSelect",
                                  "greedy": false,
                                  "target": ["Master","showOrderSelect"]
                    },
                    				{
                                  "pattern": "Master/showDebInf",
                                  "name": "showDebInf",
                                  "greedy": false,
                                  "target": ["Master","showDebInf"]
                    }
                    
                 ],
				"targets": {
                    
                               "Master": {
                               "controlAggregation": "masterPages",
                               "viewName": "Master",
                               "viewId": "Master",
                               "viewLevel": 1,
                               "transition": "slide"
                    },
                    
                               "mainDetail": {
                               "controlAggregation": "detailPages",
                               "viewName": "mainDetail",
                               "viewId": "mainDetail",
                               "viewLevel": 2,
                               "transition": "slide"
                    },
                    
                               "detCreateOrder": {
                               "controlAggregation": "detailPages",
                               "viewName": "detCreateOrder",
                               "viewId": "detCreateOrder",
                               "viewLevel": 2,
                               "transition": "slide"
                    },
                    		"showOrderSelect":{
                    		   "controlAggregation": "detailPages",
                               "viewName": "showOrderSelect",
                               "viewId": "showOrderSelect",
                               "viewLevel": 2,
                               "transition": "slide"
                    },
                    			"showOrderDetail":{
                    		   "controlAggregation": "detailPages",
                               "viewName": "showOrderDetail",
                               "viewId": "showOrderDetail",
                               "viewLevel": 3,
                               "transition": "slide"
                    },
                    
                    			"showDebInf":{
                    		   "controlAggregation": "detailPages",
                               "viewName": "showDebInf",
                               "viewId": "showDebInf",
                               "viewLevel": 2,
                               "transition": "slide"
                	}

				
				}
		
		},
		
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "EndersApp.i18n.i18n"
				}
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		}
	}
}